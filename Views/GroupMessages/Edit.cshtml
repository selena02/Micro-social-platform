@model Micro_social_platform.Models.GroupMessage

<form method="post" action="/GroupMessages/Edit/@Model.MessageId">
    <div class="card ">
        <div class="card-header text-center" style="font-family: 'Trocchi', serif; font-size:30px">
            Edit post
        </div>
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                @Html.Label("Content","Modify here")
                <br />
                <br />
                @Html.EditorFor(m => m.Content, new { htmlAttributes = new { @class = "form-control" } })
                @Html.HiddenFor(m => m.Date)
                @Html.ValidationMessage("Content", null, new { @class ="text-danger" })
                <br />
                <button class="btn btn-success" type="submit">Edit</button>
            </blockquote>
        </div>
    </div>
</form>

