@model Micro_social_platform.Models.Group

<form method="post" action="/Groups/Edit/@Model.GroupId">
    <br />
    <div class="card ">
        <div class="card-header text-center" style="font-family: 'Trocchi', serif; font-size:30px">
            Edit group
        </div>
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                @Html.Label("Name","Change name")
                <br />
                @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Name, null, new {@class = "text-danger" })
                <br />
                @Html.Label("Description", "Modify description")
                <br />
                @Html.TextArea("Description", null, new { @class = "form-control" })
                @Html.ValidationMessage("Description", null, new { @class ="text-danger" })
                <br />
                <br />
                <button class="btn btn-success" type="submit">Edit group</button>
            </blockquote>
        </div>
    </div>

</form>